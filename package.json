{
  "name": "food-rescue-network",
  "version": "1.0.0",
  "description": "A MERN stack platform connecting food donors with volunteers to reduce food waste and help those in need.",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install": "npm run install-server && npm run install-client",
    "build": "cd client && npm run build"
  },
  "keywords": ["mern", "mongodb", "express", "react", "node", "food-rescue"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.4.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
